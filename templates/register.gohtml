<!DOCTYPE html>
<html>
    <head>
        {{template "head.gohtml"}}
    </head>
    <script src="https://kit.fontawesome.com/a0a098a18f.js"></script>
    <body class="deep">
        {{template "nav.gohtml"}}
        <div class="card deep border-0">
            <div class="card-body mx-auto">
                <h4 class="card-title mt-3 text-center text-light">Create Account</h4>
                <p class="text-center text-light">Get started with your free account</p>

                <form method="POST">
                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                        </div>
                        <input name="name" class="form-control" placeholder="Name" type="text">
                    </div> <!-- form-group// -->
                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                        </div>
                        <input name="email" class="form-control" placeholder="Email address" type="email">
                    </div> <!-- form-group// -->

                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                        </div>
                        <input name="password" class="form-control" placeholder="Create password" type="password">
                    </div> <!-- form-group// -->
                    <div class="form-group">
                        <button type="submit" class="btn btn-info btn-block"> Create Account  </button>
                    </div> <!-- form-group// -->
                    <p class="text-center text-light">Have an account? <a class="text-info" href="/login">Log In</a> </p>
                </form>
            </div>
        </div> <!-- card.// -->
    </body>
</html>
